    inputRefImagePath = INPUTDIR + "anchor_nuclei.tiff"
    inputMovImagesLearnPath = INPUTDIR + "r*_DAPI.tiff"
    movingImagesApplyPath = INPUTDIR + "r*_*.tiff"
    inputUntransformedImagesPath = INPUTDIR + "anchor_*.tiff"
    elastix_parameter_files = "/hpc/scratch/hdd2/sg250269/ISS_tmp/iss-nf-test/iss-nf/parameter_files/elastix_parameters_2D.0.txt"
    ExpMetaJSON = "/hpc/scratch/hdd2/sg250269/ISS_tmp/iss-nf-test/iss-nf/data/experiment_metadata_sample.json"
    CodeJSON = INPUTDIR + "codebook_minimaldataset.json"
